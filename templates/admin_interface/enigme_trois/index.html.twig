{% extends 'base_admin.html.twig' %}

{% block title %}Énigme 3{% endblock %}

{% block body %}
    <div class="row m-0">
        {{ parent() }}
        <div class="col-10 p-0">
            <div class="container ">
                <div class="text-center">
                    <a href="{{ path('app_enigme_trois_new') }}" class="btn buttonStyle1 mb-3 addRiddle3">Ajouter une
                        énigme</a>
                </div>
                <table class="table enigme3">
                    <thead class="tableHeadEnigme3 text-center">
                    <tr class="">
                        <th scope="col">Ref</th>
                        <th scope="col">Question</th>
                        <th scope="col">Answer</th>
                        <th scope="col">Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for enigme3 in enigmes3 %}
                        <tr class="text-center">
                            <th class="table-light" scope="row">{{ enigme3.ref }}</th>
                            <td class="table-light">{{ enigme3.question }}</td>
                            <td class="table-light">{{ enigme3.answer }}</td>
                            <td class="table-light">
                                <div class="row d-flex justify-content-center">
                                    <a href="{{ path('app_enigme_trois_edit', {'id': enigme3.id}) }}"
                                       class="col-1 d-flex align-items-center"><i
                                                class="fas fa-edit text-black me-3"></i></a>
                                    {{ include('admin_interface/enigme_trois/_delete_form.html.twig') }}
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

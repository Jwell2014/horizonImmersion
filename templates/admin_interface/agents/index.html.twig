{% extends 'base_admin.html.twig' %}

{% block title %}Agents{% endblock %}

{% block body %}
    <div class="row m-0">
        {{ parent() }}
        <div class="col-10 p-0">
            <div class="container  ">
                <div class="text-center">
                    <a href="{{ path('app_agents_new') }}" class="btn buttonStyle1 mb-3 addRiddle3">Ajouter un
                        agent</a>
                </div>
                <table class="table">
                    <thead>
                    <tr class="text-center">
                        <th scope="col">Nom de code</th>
                        <th scope="col">Mot de passe</th>
                        <th scope="col">Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr class="text-center">
                            <th class="table-light" scope="row">{{ user.username }}</th>
                            <td class="table-light">{{ user.password }}</td>
                            <td class="table-light">
                                <div class="row d-flex justify-content-center">
                                    <a href="{{ path('app_agents_edit', {'id': user.id}) }}"
                                       class="col-1 d-flex align-items-center"><i
                                                class="fas fa-edit text-black me-3"></i></a>
                                    <div class="col-1 ms-0">
                                    {{ include('admin_interface/agents/_delete_form.html.twig') }}
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}

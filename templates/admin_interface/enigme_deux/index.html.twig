{% extends 'base_admin.html.twig' %}

{% block title %}Énigme 2{% endblock %}

{% block body %}
    <div class="row m-0">
        {{ parent() }}
        <div class="col-10 p-0">
            <div class="container ">
                <div class="text-center">
                    <a href="{{ path('app_enigme_deux_new') }}" class="btn buttonStyle3 mb-3 addRiddle2">Ajouter une
                        énigme</a>
                </div>
                <table class="table enigme2">
                    <thead class="tableHeadEnigme2">
                    <tr class="text-center">
                        <th scope="col">Ref</th>
                        <th scope="col">Question</th>
                        <th scope="col">Answer</th>
                        <th scope="col">Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for enigme2 in enigmes2 %}
                        <tr class="text-center">
                            <th class="table-light" scope="row">{{ enigme2.ref }}</th>
                            <td class="table-light">{{ enigme2.question }}</td>
                            <td class="table-light">{{ enigme2.answer }}</td>
                            <td class="table-light">
                                <div class="row d-flex justify-content-center">
                                    <a href="{{ path('app_enigme_deux_edit', {'id': enigme2.id}) }}"
                                       class="col-1 d-flex align-items-center"><i
                                                class="fas fa-edit text-black me-3"></i></a>
                                    {{ include('admin_interface/enigme_deux/_delete_form.html.twig') }}
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

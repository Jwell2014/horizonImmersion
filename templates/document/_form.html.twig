
<div class="container">
{{ form_start(form) }}
    {{ form_row(form.nom) }}
    {{ form_row(form.description) }}

    {% if document.contenu is not null %}

        <div class="border-1">
            <span>Contenu actuel</span>
            <img class="img-thumbnail w-25" src="{{ asset('images/document/' ~ document.contenu) }}">
        </div>

        <label>Changer le contenu si l'actuelle ne convient pas... </label>
        {{ form_row(form.contenu, {'required': false}) }}
    {% else %}
        {{ form_row(form.contenu, {'required': true}) }}
    {% endif %}
    {{ form_row(form.date) }}
    {{ form_row(form.category) }}


    <button class="btn btn-success my-3">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
</div>

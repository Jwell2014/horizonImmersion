
<div class="container">

    {{ form_start(form) }}

    {{ form_row(form.nom) }}


    {% if category is defined %}

        <div class="border-1">
            <span>Image actuelle</span>
            <img class="img-thumbnail w-25" src="{{ asset('images/category/' ~ category.image) }}">
        </div>

        <label>Changer l'image si l'actuelle ne convient pas... </label>
        {{ form_row(form.image, {'required': false}) }}
    {% else %}
        {{ form_row(form.image, {'required': true}) }}
    {% endif %}
        <ul id="image-fields-list"

            data-widget-tags="{{ '<li></li>'|e }}"
            data-widget-counter="{{ form.image|length }}">

        </ul>

        <button type="button"
                class="addImage"
                data-list-selector="#image-fields-list">
            Ajouter une image
        </button>


    {{ form_end(form) }}
</div>
